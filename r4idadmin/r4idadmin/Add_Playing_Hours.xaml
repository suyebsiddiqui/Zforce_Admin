<Window x:Name="Add_Play_Hours" x:Class="r4idadmin.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:r4idadmin"
        mc:Ignorable="d"
        Title="Add Playing Hours" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="172*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="95*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbl_price" Content="Price per hour" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,32,0,0" Width="95"/>
        <TextBox x:Name="txt_Price" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" Margin="105,35,0,0" Grid.ColumnSpan="3"/>
        <Label x:Name="lbl_number_of_hours" Content="Price per hour" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,71,0,0" Width="95"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="129" Margin="105,71,0,0" SelectionChanged="comboBox_SelectionChanged" Grid.ColumnSpan="3">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>10</ComboBoxItem>
        </ComboBox>


    </Grid>
</Window>
